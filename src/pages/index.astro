---
import Layout from '../layouts/Layout.astro';
import MobileSwitcher from '../components/MobileSwitcher.astro';
import CurrentWeather from '../components/CurrentWeather.astro';
import Forecast from '../components/Forecast.astro';
---

<Layout title="SkySavvy">
	<div class="flex flex-col">
		<div id="header-container" class="m-2 rounded-xl bg-neutral-900 p-1.5">
			<div class="flex">
				<button
					id="close-header-btn"
					class="mr-2 flex w-6 animate-pulse rounded-lg text-base hover:scale-105 active:translate-y-1
					md:hidden"
					style="background: rgb(228,94,94); background: linear-gradient(198deg, rgba(228,94,94,1) 14%, rgba(51,136,138,1) 100%);"
				>
					<img
						class="self-center"
						src="/Weather_App/close-layout.svg"
						alt="close"
					/>
				</button>

				<form class="flex grow items-center justify-between">
					<div class="flex">
						<div class="text-black">
							<input
								required
								pattern="^[^0-9]*$"
								class="rounded-sm"
								placeholder="Search For Area"
								type="text"
							/>
						</div>
					</div>

					<button
						id="weather-search"
						type="submit"
						class="rounded-lg px-3 py-1 text-base active:translate-y-1"
						style="background: rgb(2, 0, 36); background: linear-gradient(210deg, rgba(2, 0, 36, 1) 0%, rgba(37, 195, 142, 1) 0%, rgba(0, 137, 255, 1) 71%);"
					>
						Search
					</button>
				</form>
			</div>
		</div>

		<!--- hding the burger icon if the heading is visible -->

		<div id="weather-data" class="relative m-2 flex hidden flex-col rounded-3xl">
			<button id="open-header-btn" class="absolute hidden w-6 animate-pulse">
				<img src="/Weather_App/burger-layout.svg" alt="burger-layout-icon" />
			</button>

			<img
				id="weather-image"
				class="rounded-3xl"
				src="/Weather_App/moonlight_city.png"
				alt=""
			/>

			<div class="absolute top-1/3 self-end">
				<h1 class="text-center font-gilroyextrabold text-5xl font-extrabold">
					0Â°F
				</h1>
				<div class="text-base">feels like __</div>
			</div>
		</div>
		<CurrentWeather />

		<Forecast />
	</div>

	<MobileSwitcher />
</Layout>

<script src="../scripts/main.ts"></script>
